<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Change Password</title>
<link rel="stylesheet" type="text/css" href="css/sheet1.css">
<style>
    .password-match-message {
        display: none;
        color: red;
        margin-top: 5px;
        text-align: center;
    }
</style>
<script defer>
    function validatechange() {
       
        let password1 = document.getElementById("password");
        let password2 = document.getElementById("confirmPassword");
        
        if (password1.value.trim() === "" || password2.value.trim() === "") {
            alert("Password fields cannot be empty.");
        }  
        if (password1.value !== password2.value) {
            alert("Passwords are not matching.");
            return false;
        } 
        return true;
    }

</script>
</head>
<body>
<div class="container">
    <img src="images/change.jpg" alt="Left Image" class="left-image">
    <div class="form-container" >
        <form class="form" method="POST" autocomplete="off" onsubmit="return validatechange()">
            <h1>Change Password</h1>
            <center><input id="password" type="password" name="password1" minlength="8" maxlength="8" placeholder="Enter Password" required></center>
            <center><input id="confirmPassword" type="password" name="password2" minlength="8" maxlength="8" placeholder="Confirm Password" oninput="checkPasswordsMatch()" required></center>
            <center><font color="grey"><small>* Password must be of 8 characters long.</font>
            </small> </center><br>
            <center><button type="submit">Change Password</button></center><br>
            <p> <% if (message) { %>
                <p style="color:grey ;text-align:center"><%= message %></p>
            <% } %></p>
            <center><span > <a  
                    href="/home">Back to Home</a></span> </center><br>
            <div class="password-match-message" id="passwordMatchMessage">Password and Confirm Password fields did not match!</div>

        </form>

    </div>
    
</div>


</body>
</html>
